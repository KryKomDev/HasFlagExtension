<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <RootNamespace>HasFlagExtension.Sample</RootNamespace>
        <OutputType>exe</OutputType>
        
        <LocalPackagingTest>false</LocalPackagingTest>
    </PropertyGroup>

    <ItemGroup Condition="'$(LocalPackagingTest)' == 'true'">
        <PackageReference Include="HasFlagExtension" Version="1.1.0.3" OutputItemType="Analyzer" ReferenceOutputAssembly="false">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
    
    <ItemGroup Condition="'$(LocalPackagingTest)' == 'false'">
        <ProjectReference Include="../HasFlagExtension/HasFlagExtension.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\HasFlagExtension.Attributes\HasFlagExtension.Attributes.csproj" />
    </ItemGroup>
</Project>
